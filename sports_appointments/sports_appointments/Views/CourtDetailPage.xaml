<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sports_appointments.Views.CourtDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Medium" />
        <Label Text="{Binding Name}" FontSize="Small"/>
        <Label Text="Address:" FontSize="Medium" />
        <Label Text="{Binding Address}" FontSize="Small"/>
        <Label Text="Capacity:" FontSize="Medium" />
        <Label Text="{Binding Capacity}" FontSize="Small"/>
    </StackLayout>

</ContentPage>